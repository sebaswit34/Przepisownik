<div class="auth-form">
    <div class="section-header">
        <h1>Rejestracja</h1>
    </div>

    <form action="/users/rejestracja" method="POST">
        <div class="form-group">
            <label for="nazwa">Nazwa użytkownika</label>
            <input type="text" id="nazwa" name="nazwa" class="form-control" required
                value="<%= typeof nazwa != 'undefined' ? nazwa : '' %>">
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" required
                value="<%= typeof email != 'undefined' ? email : '' %>">
        </div>

        <div class="form-group">
            <label for="haslo">Hasło</label>
            <input type="password" id="haslo" name="haslo" class="form-control" required
                minlength="6">
            <small class="text-muted">Hasło musi mieć co najmniej 6 znaków</small>
        </div>

        <div class="form-group">
            <label for="haslo2">Potwierdź hasło</label>
            <input type="password" id="haslo2" name="haslo2" class="form-control" required>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-user-plus"></i> Zarejestruj się
            </button>
        </div>

        <div class="auth-links text-center mt-3">
            <p>Masz już konto? <a href="/users/login">Zaloguj się</a></p>
        </div>
    </form>
</div> 